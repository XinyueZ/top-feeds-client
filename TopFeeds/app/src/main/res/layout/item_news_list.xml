<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/ItemCardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.topfeeds4j.sample.app.widgets.MaterialRippleLayout
            android:id="@+id/content_v"
            style="@style/MaterialRippleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_transparent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/common_padding">


                <TextView
                    android:id="@+id/title_tv"
                    style="@style/Item_Title"
                    android:layout_marginBottom="@dimen/common_margin"
                    android:text="@string/lbl_title" />

                <TextView

                    android:id="@+id/desc_tv"
                    style="@style/Item_Desc"
                    android:text="@string/lbl_desc" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="@dimen/common_margin"
                    android:layout_marginTop="@dimen/common_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/common_transparent"
                        android:src="@drawable/ic_pub_date" />

                    <TextView
                        android:id="@+id/pub_date_tv"
                        style="@style/Item_PubDate"
                        android:text="@string/lbl_pub_date" />
                </LinearLayout>


            </LinearLayout>
        </com.topfeeds4j.sample.app.widgets.MaterialRippleLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/ActionBar_ToolBar_On_Item"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin" />
    </LinearLayout>
</android.support.v7.widget.CardView>