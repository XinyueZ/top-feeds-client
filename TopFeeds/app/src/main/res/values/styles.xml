<resources>

    <style name="ActionBar_ToolBar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="theme">@style/AppTheme</item>
        <item name="android:popupTheme">@style/AppTheme</item>
        <item name="popupTheme">@style/AppTheme</item>
        <item name="android:background">@color/primary_color</item>
        <item name="background">@color/primary_color</item>
    </style>


    <style name="ActionBar_ToolBar_On_Item">
        <item name="android:minHeight">30dp</item>
        <item name="android:theme">@style/AppThemeToolBar</item>
        <item name="theme">@style/AppThemeToolBar</item>
        <item name="android:popupTheme">@style/AppThemeToolBar</item>
        <item name="popupTheme">@style/AppThemeToolBar</item>
        <item name="android:background">@color/common_transparent</item>
        <item name="background">@color/common_transparent</item>
    </style>



    <style name="ItemCardView">

        <item name="contentPadding">0dp</item>
        <item name="cardElevation">2dp</item>
        <item name="cardMaxElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">1dp</item>
    </style>


    <style name="GradientProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_sections_count">3</item>
        <item name="spb_speed">1.7</item>
        <item name="spb_stroke_width">@dimen/pb_height</item>
        <item name="android:interpolator">@android:anim/decelerate_interpolator</item>
        <item name="spb_colors">@array/loading_colors</item>
        <item name="spb_gradients">true</item>
    </style>

    <style name="Item_Title">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="Item_Desc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:layout_marginTop">@dimen/common_margin</item>
    </style>


    <style name="Item_PubDate">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/common_black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>


    <style name="MaterialRippleLayout">
        <item name="mrl_rippleAlpha">0.2</item>
        <item name="mrl_rippleColor">@color/primary_dark_color</item>
        <item name="mrl_rippleDelayClick">true</item>
        <item name="mrl_rippleHover">false</item>
        <item name="mrl_rippleOverlay">false</item>
    </style>

    <style name="NavDrawerItem" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">@color/primary_accent</item>
        <item name="android:textColorSecondary">@color/primary_accent</item>
    </style>
</resources>
